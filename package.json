{
  "name": "@lycolia/next-boilerplate",
  "version": "0.14.0",
  "description": "Next.js Static Site Generation boilerplate for TypeScript",
  "author": "Lycolia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lycolia/ts-next-boilerplate"
  },
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next",
    "start": "next",
    "build": "next build --profile && next export",
    "serve": "serve -p 3000 ./out",
    "test": "jest --watch",
    "type-check": "tsc --noEmit && eslint .",
    "headless-test": "npm run type-check && jest",
    "coverage": "jest --coverage",
    "storybook": "cross-env SKIP_PREFLIGHT_CHECK=true start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@lycolia/eslint-config": "^0.1.1",
    "@storybook/addon-actions": "^6.5.0-alpha.21",
    "@storybook/addon-essentials": "^6.5.0-alpha.21",
    "@storybook/addon-links": "^6.5.0-alpha.21",
    "@storybook/builder-webpack5": "^6.5.0-alpha.21",
    "@storybook/manager-webpack5": "^6.5.0-alpha.21",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.5.0-alpha.21",
    "@swc/core": "^1.2.133",
    "@swc/jest": "^0.2.17",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "eslint-config-next": "^12.0.8",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.6",
    "eslint-plugin-testing-library": "^5.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "jest-watch-typeahead": "^1.0.0",
    "next": "^12.0.8",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.49.0",
    "typescript": "^4.5.4"
  }
}

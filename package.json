{
  "name": "@lycolia/next-boilerplate",
  "version": "0.31.0",
  "description": "Next.js Static Site Generation boilerplate for TypeScript",
  "author": "Lycolia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lycolia/ts-next-boilerplate"
  },
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next",
    "start": "next",
    "build": "next build --profile",
    "serve": "serve -p 3000 ./out",
    "test": "jest --watch",
    "fix": "biome format --write src/ && prettier --write *.md",
    "lint": "tsc --noEmit && biome lint src/",
    "headless-test": "npm run type-check && jest",
    "coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "postinstall": "git config core.hooksPath .git-hooks"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@chromatic-com/storybook": "^1.3.5",
    "@eslint/js": "^8.57.0",
    "@next/eslint-plugin-next": "^14.2.3",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/addon-interactions": "^8.1.0",
    "@storybook/addon-links": "^8.1.0",
    "@storybook/addon-onboarding": "^8.1.0",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.2",
    "@storybook/blocks": "^8.1.0",
    "@storybook/nextjs": "^8.1.0",
    "@storybook/react": "^8.1.0",
    "@storybook/test": "^8.1.0",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.7",
    "@swc/jest": "^0.2.36",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/react-test-renderer": "^18.3.0",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "next": "^14.2.5",
    "prettier": "^2.8.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-test-renderer": "^18.3.1",
    "sass": "^1.77.8",
    "storybook": "^8.2.4",
    "typescript": "^5.5.3"
  }
}
